<Application
    x:Class="Sujut.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone">

    <!--Application Resources-->
    <Application.Resources>
        <local:LocalizedStrings xmlns:local="clr-namespace:Sujut" x:Key="LocalizedStrings"/>
        <SolidColorBrush x:Key="BlackAccentBrush" Color="#000000"/>
        <SolidColorBrush x:Key="SujutLightGreenBrush" Color="#BBDDAA"/>
        <SolidColorBrush x:Key="WhiteAccentBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SujutDarkGreenBrush" Color="#86C440"/>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService
            Launching="Application_Launching" Closing="Application_Closing"
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>